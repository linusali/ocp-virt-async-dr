apiVersion: volsync.backube/v1alpha1
kind: ReplicationSource
metadata:
  name: rs-{{ repsrc.repdstc.metadata.name }}
  namespace: {{ repsrc.repdstc.metadata.namespace }}
  labels:
    "dr/managed": "true"
spec:
  sourcePVC: {{ repsrc.repdstc.metadata.name }}
  trigger:
    schedule: "{{ rs_schedule }}"
  rsyncTLS:
    volumeSnapshotClassName: {{ src_snapshot_class }}
    storageClassName: {{ src_snapshot_class }}
    copyMethod: {{ copy_method }}
    keySecret: {{ volsync_tls_secret_name }}
    address: {{repsrc.result.status.rsyncTLS.address}}
