# (Deprecated) Example template kept for reference.
apiVersion: kubevirt.io/v1
kind: VirtualMachine
metadata:
  name: {{ vm_name }}
  namespace: {{ ns }}
  labels:
    {{ label_key }}: "{{ label_val }}"
spec:
  running: true
  template:
    metadata:
      labels:
        kubevirt.io/domain: {{ vm_name }}
    spec:
      domain:
        cpu: { cores: 2 }
        resources:
          requests: { memory: 4Gi }
        devices:
          disks:
{% for d in disks %}
            - name: disk{{ loop.index }}
              disk: { bus: virtio }
{% endfor %}
      volumes:
{% for d in disks %}
        - name: disk{{ loop.index }}
          persistentVolumeClaim:
            claimName: {{ d }}-dst
{% endfor %}
